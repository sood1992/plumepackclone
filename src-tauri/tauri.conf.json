{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PlumePack Clone",
  "version": "0.1.0",
  "identifier": "com.neofox.plumepack-clone",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PlumePack Clone - Premiere Pro Project Consolidation",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "sidecar": [
        {
          "name": "ffmpeg",
          "args": true
        },
        {
          "name": "ffprobe",
          "args": true
        }
      ]
    }
  }
}
